# vim:fileencoding=utf-8:foldmethod=marker
# include theme.conf
include cybertheme.conf
#: Fonts {{{

font_family        FiraCode Nerd Font
bold_font          FiraCode Nerd Font Bold
italic_font        Maple Mono NF
bold_italic_font   Maple Mono NF

font_size          12
symbol_map U+23FB-U+23FE,U+2665,U+26A1,U+2B58,U+E000-U+E00A,U+E0A0-U+E0A3,U+E0B0-U+E0C8,U+E0CA,U+E0CC-U+E0D2,U+E0D4,U+E200-U+E2A9,U+E300-U+E3E3,U+E5FA-U+E634,U+E700-U+E7C5,U+EA60-U+EBEB,U+F000-U+F2E0,U+F300-U+F32F,U+F400-U+F4A9,U+F500-U+F8FF Symbols Nerd Font
force_ltr         no
adjust_column_width 100%
adjust_line_height 100%
disable_ligatures  no

#: }}}

#: Cursor customization {{{

cursor             #bbbbbb
cursor_shape       beam
cursor_beam_thickness 1

#: }}}

#: Scrollback {{{
background_image ~/dotfiles/Wallpapers/batmanblack.png
background_image_layout scaled
scrollback_lines   50000
scrollback_pager   less -R -F
wheel_scroll_multiplier 2.0

#: }}}

#: Mouse {{{

mouse_hide_wait    3.0
url_color          #0078d7
url_style          single
open_url_with      default
url_prefixes       http https file ftp gemini irc gopher mailto news git
detect_urls        yes
copy_on_select      no
strip_trailing_spaces always
focus_follows_mouse no
default_pointer_shape arrow

#: }}}

#: Performance tuning {{{

repaint_delay      10
input_delay        3
sync_to_monitor    yes

#: }}}

#: Terminal bell {{{

enable_audio_bell  yes
visual_bell_duration 0.0
window_alert_on_bell no

#: }}}

#: Window layout {{{

remember_window_size   no
enabled_layouts        splits
window_border_width    0.1
draw_minimal_borders   yes
active_border_color    #cba6f7
inactive_border_color  #777777

#: }}}

#: Tab bar {{{

tab_bar_edge              top
tab_bar_background        none
tab_bar_style             powerline
tab_powerline_style       slanted
tab_title_template        "{fmt.fg.c2c2c2}{title}"
active_tab_title_template "{fmt.fg._fff}{title}"
active_tab_foreground   #F38BA8
active_tab_background   #22243D
active_tab_font_style   normal
inactive_tab_foreground #D9E0EE
inactive_tab_background #0D0F18
inactive_tab_font_style italic

#: }}}

#: Color scheme {{{

background_opacity    0.8
selection_foreground  none
bold_is_bright        yes

#: Color table
#
# background     #0D0F18
# foreground     #CDD6F4
#
