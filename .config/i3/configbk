# Other Keybindings {{{

## Screenshots
bindsym Print            exec --no-startup-id maim "/home/$USER/Immagini/$(date).png"
bindsym $mod+Print       exec --no-startup-id maim --window $(xdotool getactivewindow) "/home/$USER/Immagini/$(date).png"
bindsym Shift+Print      exec --no-startup-id maim --select "/home/$USER/Immagini/$(date).png"

## Clipboard Screenshots
bindsym Ctrl+Print       exec --no-startup-id maim | xclip -selection clipboard -t image/png
bindsym Ctrl+$mod+Print  exec --no-startup-id maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Ctrl+Shift+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

## Brightness
bindsym XF86MonBrightnessUp   exec --no-startup-id ~/.config/i3/Brightness.sh up
bindsym XF86MonBrightnessDown exec --no-startup-id ~/.config/i3/Brightness.sh down

## Lockscreen
bindsym $mod+l       exec --no-startup-id exec betterlockscreen -l

## Telegram
bindsym $mod+t       exec --no-startup-id 64gram-desktop

## File manager - GUI
bindsym $mod+e       exec --no-startup-id thunar

## Client Mail
bindsym $mod+w       exec --no-startup-id kitty -e neomutt

## Nvim
bindsym $mod+n       exec --no-startup-id kitty -e nvim

## Browser
bindsym $mod+z       exec --no-startup-id waterfox

## Video recording
bindsym $mod+p       exec --no-startup-id obs

## Crunchyroll
bindsym $mod+c       exec --no-startup-id crunchyroll

## Wifi menu
bindsym $sup+w       exec --no-startup-id /home/$USER/.config/i3/wifi.sh
bindsym $mod+SHIFT+w exec --no-startup-id /home/$USER/.config/i3/wifi.sh

## Discord
bindsym $mod+d       exec --no-startup-id vesktop

## Simple exit
bindsym $mod+Shift+e exec --no-startup-id "i3-nagbar -t warning -m 'Exit?' -b 'Yes, exit i3' 'i3-msg exit'"

## Reload i3
bindsym $mod+Shift+r exec --no-startup-id "i3-msg restart"

## Application launcher
bindsym $mod+r       exec --no-startup-id "rofi -show drun -lines 10 -width 20"

## Notes
bindsym $mod+Shift+n exec --no-startup-id kitty -e sh -c 'cd ~/Repo/LaTeX && nvim .'

## File manager - Terminal
bindsym $mod+o       exec --no-startup-id kitty -e lf

## Audio Visualizer
bindsym $mod+y       exec --no-startup-id kitty -e cava

## Reload
bindsym $mod+Shift+c reload

## Music
bindsym $mod+Shift+m exec --no-startup-id /home/$USER/.config/i3/music.sh

## Switcher
bindsym $mod+$sup+r exec  --no-startup-id /home/$USER/.config/i3/rice_switcher.sh

## Powermenu
bindsym $mod+x exec --no-startup-id ~/.config/polybar/scripts/powermenu.sh 

# }}}

# Pulse Audio Controls {{{
bindsym XF86AudioMute        exec --no-startup-id /home/$USER/.config/dunst/volume.sh mute
bindsym XF86AudioLowerVolume exec --no-startup-id /home/$USER/.config/dunst/volume.sh down
bindsym XF86AudioRaiseVolume exec --no-startup-id /home/$USER/.config/dunst/volume.sh up

# }}}

# Media Player Controls {{{
bindsym XF86AudioStop exec --no-startup-id mpc clear && /home/reed/scripts/killm.sh ncmpcpp
bindsym XF86AudioNext exec --no-startup-id mpc next
bindsym XF86AudioPlay exec --no-startup-id mpc toggle
bindsym XF86AudioPrev exec --no-startup-id mpc prev

# if there's no XF86Audio buttons, control+arrow is good
bindsym Control+Up    exec --no-startup-id mpc clear && /home/reed/scripts/killm.sh ncmpcpp
bindsym Control+Right exec --no-startup-id mpc next
bindsym Control+Down  exec --no-startup-id mpc toggle
bindsym Control+Left  exec --no-startup-id mpc prev

# }}}

# target                 title     bg    text   indicator  border
client.focused           $lavender $base $text  $rosewater $lavender
client.focused_inactive  $overlay0 $base $text  $rosewater $overlay0
client.unfocused         $overlay0 $base $text  $rosewater $overlay0
client.urgent            $peach    $base $peach $overlay0  $peach
client.placeholder       $overlay0 $base $text  $overlay0  $overlay0
client.background        $base

