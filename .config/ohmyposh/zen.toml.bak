[[blocks]]
  type = 'prompt'
  alignment = 'left'

  [[blocks.segments]]
    type = 'session'
    style = 'plain'
    foreground_templates = ['{{ if .Root }}lightRed{{ end }}']
    template = '<{{ if .Root }}lightBlue{{ else }}green{{ end }}>â”Œâ”€â”€(</>{{ .UserName }}{{ if .Root }}ðŸ’€{{ else }}ã‰¿{{ end }}{{ .HostName }}<{{ if .Root }}lightBlue{{ else }}green{{ end }}>)</>'
    foreground = 'lightBlue'

    [blocks.segments.properties]
      display_host = true

  [[blocks.segments]]
    type = 'python'
    style = 'powerline'  # Estilo Powerline
    background = '#FFDE57'  # Cor de fundo
    foreground = '#111111'  # Cor de primeiro plano
    powerline_symbol = '\ue0b0'  # SÃ­mbolo Powerline
    template = ' \ue235 {{ if .Venv }}({{ .Venv }}){{ end }} '  # FormataÃ§Ã£o do ambiente

    [blocks.segments.properties]
      display_mode = 'environment'  # Modo de exibiÃ§Ã£o
      fetch_virtual_env = true  # Busca o ambiente virtual
      home_enabled = true  # Ativa a exibiÃ§Ã£o do diretÃ³rio inicial

  [[blocks.segments]]
    type = 'path'
    style = 'plain'
    template = '<{{ if .Root }}lightBlue{{ else }}green{{ end }}>-[</>{{ .Path }}<{{ if .Root }}lightBlue{{ else }}green{{ end }}>]</>'
    foreground = 'lightWhite'

    [blocks.segments.properties]
      folder_separator_icon = '<#c0c0c0>/</>'
      style = 'full'

  [[blocks.segments]]
    type = 'git'
    style = 'plain'
    template = '<{{ if .Root }}lightBlue{{ else }}green{{ end }}>-[</>{{ .HEAD }}<{{ if .Root }}lightBlue{{ else }}green{{ end }}>]</>'
    foreground = 'white'

  [[blocks]]
    alignment = 'left'
    newline = true

    [[blocks.segments]]
      type = 'text'
      style = 'plain'
      template = '<{{ if .Root }}lightBlue{{ else }}green{{ end }}>â””â”€</>{{ if .Root }}<lightRed>#</>{{ else }}${{ end }} '
      foreground = 'lightBlue'

