{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#22D3EE",
          "foreground_templates": ["{{ if .Root }}#EF4444{{ end }}"],
          "properties": { "display_host": true },
          "template": "<#7C3AED>‚îå‚îÄ‚îÄ(</>{{ .UserName }}{{ if .Root }}üíÄ{{ else }} Û∞≠ü {{ end }}{{ .HostName }}<#7C3AED>)"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#CDD6F4",
          "properties": { "folder_separator_icon": "<#7C3AED>/</>", "style": "full" },
          "template": "<#7C3AED>-[</>Û∞£ñ {{ .Path }}<#7C3AED>]</>"
        },
        {
          "type": "python",
          "style": "plain",
          "foreground": "#10B981",
          "properties": { "fetch_version": true, "fetch_virtual_env": true },
          "template": "<#7C3AED>-[</>Óúº {{ if .Venv }}{{ .Venv }}{{ else if .Pyenv }}{{ .Pyenv }}{{ else }}{{ .Full }}{{ end }}<#7C3AED>]</>"
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "#FACC15",
          "properties": { "fetch_version": true },
          "template": "<#7C3AED>-[</>Óúò {{ .Full }}<#7C3AED>]</>"
        },
        {
          "type": "go",
          "style": "plain",
          "foreground": "#00ADD8",
          "properties": { "fetch_version": true },
          "template": "<#7C3AED>-[</>Óòß {{ .Full }}<#7C3AED>]</>"
        },
        {
          "type": "java",
          "style": "plain",
          "foreground": "#FF2D20",
          "properties": { "fetch_version": true },
          "template": "<#7C3AED>-[</>Óâñ {{ .Full }}<#7C3AED>]</>"
        },
        {
          "type": "command",
          "style": "plain",
          "foreground": "#CDD6F4",
          "properties": {
            "command": "_kora_get_project_language",
            "shell": "zsh",
            "template": "<#7C3AED>-[</>{{ .Output }}<#7C3AED>]</>",
            "always_enabled": true,
            "display_mode": "always"
          },
          "template": "<#7C3AED>-[</>{{ .Output }}<#7C3AED>]</>"
        },
        {
          "type": "dotnet",
          "style": "plain",
          "foreground": "#512BD4",
          "properties": { "fetch_version": true },
          "template": "<#7C3AED>-[</>Û∞™Æ {{ .Full }}<#7C3AED>]</>"
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#ee79d1",
          "properties": {
            "branch_icon": "",
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": "<#7C3AED>-[</>Óú• {{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} ÔëÑ{{ end }}{{ if .Staging.Changed }} ÔÅÜ{{ end }}{{ if .Ahead }} ÔÖ∂{{ .Ahead }}{{ end }}{{ if .Behind }} ÔÖµ{{ .Behind }}{{ end }}<#7C3AED>]</>"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#CDD6F4",
          "properties": { "always_enabled": true, "style": "round" },
          "template": " ‚è± {{ .FormattedMs }} "
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "#10B981",
          "foreground_templates": ["{{ if gt .Code 0 }}#EF4444{{ end }}"],
          "properties": { "always_enabled": true },
          "template": " {{ if gt .Code 0 }}Ó™á{{ else }}Û∞Ñ≤{{ end }} "
        },
        {
          "type": "envvar",
          "style": "plain",
          "foreground": "#F472B6",
          "properties": { "var_name": "KORA_ENV", "display_mode": "always" },
          "template": "<#7C3AED> ÓØÜ {{ .Value }} "
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#7C3AED",
          "template": "<#7C3AED>‚îî‚îÄ</>{{ if .Root }}<#EF4444>#</>{{ else }}${{ end }} "
        }
      ]
    }
  ]
}