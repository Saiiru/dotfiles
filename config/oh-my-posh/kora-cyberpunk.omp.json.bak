{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "foreground": "#0A0E27",
          "background": "#7C3AED",
          "leading_diamond": "┌─[",
          "trailing_diamond": "",
          "template": "󰭟 {{ .UserName }}@{{ .HostName }}",
          "properties": {
            "display_host": true
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#7F849C",
          "template": "] - ["
        },
        {
          "type": "path",
          "style": "diamond",
          "foreground": "#0A0E27",
          "background": "#22D3EE",
          "template": " {{ .Path }}",
          "properties": {
            "style": "mixed",
            "max_depth": 3,
            "folder_icon": "",
            "home_icon": ""
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#7F849C",
          "template": "]"
        },
        {
          "type": "python",
          "style": "diamond",
          "foreground": "#0A0E27",
          "background": "#10B981",
          "template": " - [ {{ .Full }}]",
          "properties": {
            "display_mode": "context"
          }
        },
        {
          "type": "node",
          "style": "diamond",
          "foreground": "#0A0E27",
          "background": "#F59E0B",
          "template": " - [ {{ .Full }}]",
          "properties": {
            "display_mode": "context"
          }
        },
        {
          "type": "java",
          "style": "diamond",
          "foreground": "#0A0E27",
          "background": "#EC4899",
          "template": " - [☕ {{ .Full }}]",
          "properties": {
            "display_mode": "context"
          }
        },
        {
          "type": "go",
          "style": "diamond",
          "foreground": "#0A0E27",
          "background": "#22D3EE",
          "template": " - [ {{ .Full }}]",
          "properties": {
            "display_mode": "context"
          }
        },
        {
          "type": "rust",
          "style": "diamond",
          "foreground": "#0A0E27",
          "background": "#EF4444",
          "template": " - [ {{ .Full }}]",
          "properties": {
            "display_mode": "context"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "foreground": "#0A0E27",
          "background": "#F9DC5C",
          "template": " - [ {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .HasUnstagedChanges }} {{ end }}{{ if .HasStagedChanges }} {{ end }}{{ if .HasUntracked }}{{ end }}{{ if .Ahead }} ⇡{{ .Ahead }}{{ end }}{{ if .Behind }} ⇣{{ .Behind }}{{ end }}]",
          "properties": {
            "branch_icon": "",
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#7F849C",
          "template": "└─"
        },
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#EF4444",
          "template": " ✗{{ .Code }}",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "#CDD6F4",
          "template": " ❯ "
        }
      ]
    }
  ]
}
