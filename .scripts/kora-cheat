#!/usr/bin/env zsh
# KORA Cheatsheet (kora-cheat)

# Cores
KORA_PRIMARY="#A020F0"
KORA_CYAN="#00FFFF"
KORA_GREEN="#00FF7F"
KORA_MAGENTA="#FF00FF"
KORA_YELLOW="#FF00FF"
KORA_RED="#FF00FF"

# Função para exibir o cheatsheet
kora_display_cheat() {
  gum style --border-foreground "$KORA_PRIMARY" --border double --align center --width 80 --margin "1 2" --padding "1 2" "KORA :: CHEATSHEET DE COMANDOS"

  local selected_tab=$(gum choose "Zsh" "Tmux" "Neovim" "Hyprland" --header "Selecione a categoria:")

  case $selected_tab in
    "Zsh")
      gum style --foreground "$KORA_CYAN" "Zsh - Comandos Essenciais"
      gum table \
        --header.foreground "$KORA_GREEN" \
        --border-foreground "$KORA_PRIMARY" \
        --columns "1:width=15,align=left" \
        --columns "2:width=50,align=left" \
        "Comando" "Descrição" \
        "Ctrl+T" "Buscar arquivos (fzf)" \
        "Ctrl+R" "Buscar no histórico (fzf)" \
        "Ctrl+O" "Abrir seletor de projetos (kora-project)" \
        "ls/ll/la" "Listar arquivos (eza)" \
        "cat" "Visualizar arquivos (bat)" \
        "g" "Comandos Git (alias para git)" \
        "lg" "Lazygit (interface Git TUI)" \
        "mkproj" "Criar novo projeto (interativo)" \
        "kora-cheat" "Abrir este cheatsheet"
      ;;
    "Tmux")
      gum style --foreground "$KORA_CYAN" "Tmux - Gerenciamento de Sessões"
      gum table \
        --header.foreground "$KORA_GREEN" \
        --border-foreground "$KORA_PRIMARY" \
        --columns "1:width=15,align=left" \
        --columns "2:width=50,align=left" \
        "Atalho" "Descrição" \
        "Prefix + K" "Seletor de sessões (sesh/fzf)" \
        "Prefix + c" "Nova janela" \
        "Prefix + |" "Split vertical" \
        "Prefix + -" "Split horizontal" \
        "Prefix + h/j/k/l" "Navegar entre painéis" \
        "Prefix + r" "Recarregar tmux.conf" \
        "Prefix + d" "Desanexar sessão"
      ;;
    "Neovim")
      gum style --foreground "$KORA_CYAN" "Neovim - Atalhos Essenciais"
      gum table \
        --header.foreground "$KORA_GREEN" \
        --border-foreground "$KORA_PRIMARY" \
        --columns "1:width=15,align=left" \
        --columns "2:width=50,align=left" \
        "Atalho" "Descrição" \
        "<leader>pv" "Abrir explorador de arquivos (nvim-tree)" \
        "<leader>ff" "Buscar arquivos (telescope)" \
        "<leader>fg" "Buscar texto (telescope-grep)" \
        "gd" "Ir para definição (LSP)" \
        "<leader>ca" "Ações de código (LSP)" \
        "<leader>rn" "Renomear símbolo (LSP)" \
        "<leader>fs" "Formatar documento (LSP)"
      ;;
    "Hyprland")
      gum style --foreground "$KORA_CYAN" "Hyprland - Gerenciador de Janelas"
      gum table \
        --header.foreground "$KORA_GREEN" \
        --border-foreground "$KORA_PRIMARY" \
        --columns "1:width=15,align=left" \
        --columns "2:width=50,align=left" \
        "Atalho" "Descrição" \
        "Super + Return" "Abrir terminal (kitty)" \
        "Super + Q" "Fechar janela ativa" \
        "Super + Space" "Alternar floating/tiling" \
        "Super + Shift + Q" "Matar janela (forçar)" \
        "Super + 1-9" "Mudar para workspace" \
        "Super + Shift + 1-9" "Mover janela para workspace"
      ;;
  esac
}

kora_display_cheat
